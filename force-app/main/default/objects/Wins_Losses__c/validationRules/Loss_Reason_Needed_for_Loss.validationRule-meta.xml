<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Loss_Reason_Needed_for_Loss</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
ISPICKVAL(Type__c, &quot;Loss&quot;),
ISPICKVAL(Loss_Reason__c, &quot;&quot;)
)</errorConditionFormula>
    <errorMessage>Loss Reason must be entered when Type = Loss</errorMessage>
</ValidationRule>
