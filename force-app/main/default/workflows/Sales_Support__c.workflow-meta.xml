    <rules>
        <fullName>All -  notify when either managed by changes</fullName>
        <actions>
            <name>Sales_Support_Assigned_Roadnet</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <description>Any BU - When either of the the Managed By fields change, send an email to the Managed By users and the Sales rep</description>
        <formula>OR(ISCHANGED( Secondary_Managed_By__c ),
ISCHANGED(SE_User__c))

&amp;&amp; $User.Bypass_Workflows__c = false</formula>
        <triggerType>onAllChanges</triggerType>
    </rules>
    <rules>
        <fullName>All -  notify when either managed by changes Evaluation Record Type</fullName>
        <actions>
            <name>Sales_Support_Assigned_Evaluation_SSA</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <description>Evaluation Record Type- When either of the the Managed By fields change, send an email to the Managed By users and the Sales rep</description>
        <formula>OR(ISCHANGED( Secondary_Managed_By__c ),
ISCHANGED(SE_User__c), ISCHANGED(CSM_Assigned__c), ISCHANGED(PS_Resource_Assigned__c))

&amp;&amp; $User.Bypass_Workflows__c = false</formula>
        <triggerType>onAllChanges</triggerType>
    </rules>
    <rules>
        <fullName>Clone Record Updated</fullName>
        <actions>
            <name>Sales_Support_Activity_Cloned_Record</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <description>Clone Record Updated</description>
        <formula>ISClone()</formula>
        <triggerType>onAllChanges</triggerType>
    </rules>
    <rules>
        <fullName>RN - notify for DV rt when submitted or cancelled selected</fullName>
        <actions>
            <name>Send_email_to_PS_for_change_in_status</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <booleanFilter>1 AND 2</booleanFilter>
        <criteriaItems>
            <field>Sales_Support__c.Status__c</field>
            <operation>contains</operation>
            <value>Cancelled,Submitted to PS</value>
        </criteriaItems>
        <criteriaItems>
            <field>Sales_Support__c.RecordTypeId</field>
            <operation>equals</operation>
            <value>Data Validation</value>
        </criteriaItems>
        <description>RN - on data validation activity, when submitted to PS 1 or 2 or cancelled are selected send email to Bralon, Anne, and Alejandra</description>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
    <rules>
        <fullName>RN - on DV rt alert prim %26 sales rep for discount%2C cancel%2C return</fullName>
        <actions>
            <name>Sales_Support_Activity_Created_Edited</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>Sales_Support__c.Status__c</field>
            <operation>equals</operation>
            <value>10% Discount Approved,5% Discount Approved,Cancelled,Returned for Correction</value>
        </criteriaItems>
        <description>For data validation, emails primary and sales rep when 10% Discount Approved, 5% Discount Approved, Cancelled, or Returned for Correction are selected</description>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
</Workflow>
