    <rules>
        <fullName>At Risk - New At Risk Created - All BUs</fullName>
        <actions>
            <name>At_Risk_Email_Alert_All_Account_Team_Members</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>At_Risk__c.Name</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <criteriaItems>
            <field>At_Risk__c.Severity__c</field>
            <operation>equals</operation>
            <value>Yellow</value>
        </criteriaItems>
        <description>Notification to all members of the Account Team whenever there is an At Risk record created.</description>
        <triggerType>onCreateOnly</triggerType>
    </rules>
    <rules>
        <fullName>At Risk Notification Closed</fullName>
        <actions>
            <name>Alert_At_Risk_Event_is_Closed_or_Cancelled</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>At_Risk__c.Status__c</field>
            <operation>equals</operation>
            <value>Closed,Cancelled</value>
        </criteriaItems>
        <description>This is to notify the Account owner and account manager that a At Risk event has been Closed or Cancelled.</description>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
    <rules>
        <fullName>Critical At Risk Notification</fullName>
        <actions>
            <name>At_Risk_notification_to_account_owner</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>At_Risk__c.Severity__c</field>
            <operation>equals</operation>
            <value>Red</value>
        </criteriaItems>
        <description>This is to notify the Account owner and account manager that a critical or &quot;red&quot; At Risk event has been created in order to take necessary actions to mitigate the risk/issues.</description>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
</Workflow>
