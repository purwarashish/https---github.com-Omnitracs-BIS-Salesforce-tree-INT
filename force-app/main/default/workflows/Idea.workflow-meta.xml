    <rules>
        <fullName>CNR Ideas Notification to Ideas Expert Group</fullName>
        <actions>
            <name>New_CNR_Idea_Email_Alert</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>Idea.Business_Unit__c</field>
            <operation>equals</operation>
            <value>Omnitracs MX</value>
        </criteriaItems>
        <triggerType>onCreateOnly</triggerType>
    </rules>
    <rules>
        <fullName>Idea - Created</fullName>
        <actions>
            <name>Idea_New_Idea_Posted</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
