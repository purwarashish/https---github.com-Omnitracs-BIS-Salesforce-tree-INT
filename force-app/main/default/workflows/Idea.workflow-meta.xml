        <triggerType>onCreateOnly</triggerType>
    </rules>
    <rules>
        <fullName>Idea - Created Mexico</fullName>
        <actions>
            <name>Idea_New_Idea_Posted_Mexico</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>Idea.CommunityId</field>
            <operation>contains</operation>
            <value>Mexico</value>
        </criteriaItems>
        <triggerType>onCreateOnly</triggerType>
    </rules>
    <rules>
        <fullName>Idea - PM is assigned</fullName>
        <actions>
            <name>Idea_Idea_Assigned_to_PM</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <formula>ISCHANGED(Product_Manager__c)</formula>
        <triggerType>onAllChanges</triggerType>
    </rules>
    <rules>
        <fullName>Idea - Pending in New Status</fullName>
        <active>true</active>
        <criteriaItems>
            <field>Idea.Status</field>
            <operation>equals</operation>
            <value>New</value>
        </criteriaItems>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
        <workflowTimeTriggers>
            <actions>
                <name>Idea_Pending_in_Status_30_days</name>
                <type>Alert</type>
            </actions>
            <timeLength>30</timeLength>
            <workflowTimeTriggerUnit>Days</workflowTimeTriggerUnit>
        </workflowTimeTriggers>
        <workflowTimeTriggers>
            <actions>
                <name>Idea_Pending_in_Status_60_days</name>
