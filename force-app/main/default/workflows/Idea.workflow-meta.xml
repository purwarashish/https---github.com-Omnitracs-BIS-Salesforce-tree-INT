    <rules>
        <fullName>Idea - Send Email for Comments To Creator</fullName>
        <actions>
            <name>Ideas_Comment_Added_Notify_Created_By</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <formula>AND (  ISCHANGED( LastCommentDate) ,  Last_Comment_Created_By__c &lt;&gt; CreatedById )</formula>
        <triggerType>onAllChanges</triggerType>
    </rules>
    <rules>
        <fullName>Idea - Send Email for Comments To PM</fullName>
