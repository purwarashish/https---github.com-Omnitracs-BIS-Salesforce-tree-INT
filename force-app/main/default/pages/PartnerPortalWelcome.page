        <apex:outputField value="{!lead.Name}" />
        <apex:facet name="header">Lead Name</apex:facet>
    </apex:column>
    <apex:column >
        <apex:outputField value="{!lead.Title}" />
        <apex:facet name="header">Title</apex:facet>
    </apex:column>
    <apex:column >
