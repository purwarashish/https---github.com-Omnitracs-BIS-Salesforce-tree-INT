<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>creator</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>FRACommercialSales</submitter>
        <type>group</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>FRAInsuranceSales</submitter>
        <type>group</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>FRATruckingSales</submitter>
        <type>group</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Request_Type__c</field>
        <field>Request_Status__c</field>
        <field>Account__c</field>
        <field>Contact__c</field>
        <field>Product__c</field>
        <field>Contract_Type__c</field>
        <field>Requested_Completion_Date__c</field>
        <field>Contract_Start_Date__c</field>
        <field>Contract_End_Date__c</field>
        <field>Total_Contract_Value__c</field>
        <field>Assigned_To__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>CreatedBy</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>Contract_Request__c.No_Approver__c</field>
                <operation>equals</operation>
                <value>NO</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>ApproveRecord</ifCriteriaNotMet>
        <label>Always Auto Approve</label>
        <name>AlwaysAutoApprove</name>
    </approvalStep>
    <emailTemplate>QESAutomatedMessages/Contract_Request_Approval_Required</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Contract_Request__c.Request_Status__c</field>
            <operation>notEqual</operation>
            <value>Cancelled,Set-up Complete,Pending Approval,Distributed</value>
        </criteriaItems>
        <criteriaItems>
            <field>Contract_Request__c.No_Approver__c</field>
            <operation>equals</operation>
            <value>YES</value>
        </criteriaItems>
        <criteriaItems>
            <field>Contract_Request__c.RecordType</field>
            <operation>equals</operation>
            <value>FleetRisk Advisors Agreement</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>ContractRequestFRAsubmitted</name>
            <type>Alert</type>
        </action>
        <action>
            <name>ContractRequestSetAssignedDate</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>ContractRequestsetAssignedstatus</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Is_Approval_Process_false</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>ContractRequestFRArejected</name>
            <type>Alert</type>
        </action>
        <action>
            <name>ContractRequestsetRejectedstatus</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Is_Approval_Process_false</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>ContractRequestPendingApproval</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>DateSubmitted</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Is_Approval_Process_true</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>FRA CR Approval-no Approvers</label>
    <processOrder>3</processOrder>
    <recallActions>
        <action>
            <name>ContractRequestsetCRPendingstatus</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Is_Approval_Process_false</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
