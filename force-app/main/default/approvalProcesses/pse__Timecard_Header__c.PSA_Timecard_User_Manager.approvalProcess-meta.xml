<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <type>userHierarchyField</type>
            </approver>
        </assignedApprover>
        <description>Single stage approval by User Manager.</description>
        <entryCriteria>
            <formula>AND 
(pse__Resource__r.pse__Practice__c &lt;&gt; &apos;Customer Support&apos;, 
(NOT(ISPICKVAL(pse__Project__r.pse__Project_Type__c, &apos;Customer Support&apos;))))</formula>
        </entryCriteria>
        <ifCriteriaNotMet>ApproveRecord</ifCriteriaNotMet>
        <label>Approval By User Manager</label>
        <name>Approval_By_User_Manager</name>
        <rejectionActions>
            <action>
                <name>PSA_Timecard_Rejection_Alert</name>
                <type>Alert</type>
            </action>
            <action>
                <name>PSA_Timecard_Status_Rejected</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>PSA_Timecard_Unset_Submitted_Flag</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <description>Called when the Project&apos;s Approval Method is &apos;Direct Manager&apos;.</description>
    <emailTemplate>Professional_Services/PSA_Timecard_Submittal</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <formula>OR( 
AND(ISPICKVAL(pse__Project__r.Time_Approval_Method__c, &apos;Direct Manager&apos;), OR(ISPICKVAL( pse__Status__c, &apos;Submitted&apos;), ISPICKVAL(pse__Status__c, &apos;Rejected&apos;))), 
AND(ISPICKVAL(pse__Project__r.Time_Approval_Method__c, &apos;Project Manager&apos;), OR(pse__Resource__c = pse__Project__r.pse__Project_Manager__c, ISBLANK(pse__Project__r.pse__Project_Manager__c)), OR(ISPICKVAL( pse__Status__c, &apos;Submitted&apos;), ISPICKVAL(pse__Status__c, &apos;Rejected&apos;))))</formula>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>PSA_Timecard_Set_Approved_Flag</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>PSA_Timecard_Set_IIF_Flag</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>PSA_Timecard_Status_Approved</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>PSA_Timecard_Status_Rejected</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>PSA_Timecard_Unset_Approved_Flag</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>PSA_Timecard_Unset_IIF_Flag</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>PSA_Timecard_Unset_Submitted_Flag</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Update_Approver_Email_Address</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>PSA Timecard User Manager</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>true</useApproverFieldOfRecordOwner>
        <userHierarchyField>Manager</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>2</processOrder>
    <recallActions>
        <action>
            <name>PSA_Timecard_Status_Saved</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>PSA_Timecard_Unset_Approved_Flag</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>PSA_Timecard_Unset_IIF_Flag</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>PSA_Timecard_Unset_Submitted_Flag</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
