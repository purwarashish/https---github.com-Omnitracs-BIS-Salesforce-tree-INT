<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
        <field>Amount__c</field>
        <field>Account__c</field>
        <field>Budget__c</field>
        <field>Expenditure_Type__c</field>
        <field>Fund_Request__c</field>
        <field>CreatedBy</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <approvalActions>
            <action>
                <name>Fund_Claim_Approved</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Fund_Claim_Approved_Date</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Fund_Claim_Approved_Flag</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Fund_Claim_Status_Update</name>
                <type>Alert</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>MDFManagers775351</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Channel Manager Approval</label>
        <name>Channel_Manager_Approval</name>
    </approvalStep>
    <emailTemplate>PartnerRelationshipManagement/FundClaimApprovalRequired</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>SFDC_MDF_Claim__c.Status__c</field>
            <operation>equals</operation>
            <value>Draft</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Fund_Claim_Approved_Record_Type</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Fund_Claim_Rejected</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Fund_Claim_Status_Update</name>
            <type>Alert</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Fund_Claim_Status_Update</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Fund_Claim_Submitted</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>MDF -  Fund Claim Approval Process</label>
    <processOrder>1</processOrder>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
