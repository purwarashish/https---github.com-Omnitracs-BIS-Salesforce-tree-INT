<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>false</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <approvalActions>
            <action>
                <name>Opportunity_Check_Unlock_Opportunity</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>dgriffith@omnitracs.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>lrecio@omnitracs.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>otaiwo@omnitracs.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>rskaggs@omnitracs.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Approval for Finance</label>
        <name>Approval_for_Finance</name>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <approvalActions>
            <action>
                <name>Finance_ReviewNeeded_Sylectus</name>
                <type>Alert</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>kmaki@omnitracs.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>smilana@omnitracs.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>Opportunity.Owner_Business_Unit__c</field>
                <operation>equals</operation>
                <value>Sylectus</value>
            </criteriaItems>
        </entryCriteria>
        <label>Approval for Sylectus Finance Team</label>
        <name>Approval_for_Sylectus_Finance_Team</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <description>Opportunity Finance Review for Non- Mexico. Includes renewal opportunities for Sylectus and opportunities where the Product Name contains XRS.</description>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <booleanFilter>1 AND 2 AND 3 AND (4 OR 5)</booleanFilter>
        <criteriaItems>
            <field>Opportunity.Finance_Status__c</field>
            <operation>equals</operation>
            <value>Needs Review</value>
        </criteriaItems>
        <criteriaItems>
            <field>Account.Primary_Business_Unit__c</field>
            <operation>notEqual</operation>
            <value>Omnitracs Mexico</value>
        </criteriaItems>
        <criteriaItems>
            <field>Opportunity.RecordType</field>
            <operation>equals</operation>
            <value>Renewal Only</value>
        </criteriaItems>
        <criteriaItems>
            <field>Opportunity.Product_name__c</field>
            <operation>equals</operation>
            <value>XRS</value>
        </criteriaItems>
        <criteriaItems>
            <field>Opportunity.Owner_Business_Unit__c</field>
            <operation>equals</operation>
            <value>Sylectus</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Email_Customer_Setup_Team_that_Finance_Review_has_been_completed</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Email_to_Finance_Accounting_team_forFinanceReviewComplete</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Set_Finance_Status_Review_Completed</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Email_to_Opportunity_Owner_and_sender_that_Finance_Review_has_rejected</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Set_Finance_Status_Rejected</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Finance_ReviewNeeded</name>
            <type>Alert</type>
        </action>
    </initialSubmissionActions>
    <label>Opportunity Finance Review-Non MX 2 CPQ</label>
    <processOrder>1</processOrder>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
