<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>Approver__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <formula>FALSE</formula>
        </entryCriteria>
        <ifCriteriaNotMet>ApproveRecord</ifCriteriaNotMet>
        <label>Don&apos;t Enter, Auto-Approve</label>
        <name>Don_t_Enter_Auto_Approve</name>
    </approvalStep>
    <description>This is the alternate approval process that gets entered if a quote does not need manual approval, but can be auto-approved.</description>
    <emailTemplate>All_Email_Templates/CPQ_Approval_Email_Template</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <formula>AND(Needs_Approval__c=False, Ran_Approvals__c=True, ISPICKVAL(Evaluated_Status__c ,&apos;Evaluated&apos;),Invoice_Address__c !=&apos;&apos;, Corporate_Address__c !=&apos;&apos;)</formula>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Update_Quote_Approval_Status_Approved</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Quote_Status_to_Approved</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Update_Quote_Status_Rejected</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Ran_Approvals_False</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Ready_for_Approval_Recall_Rejec</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Update_Evaluated_Status_to_Post_Eval</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>VCG_CPQ_Quote Auto Approve</label>
    <processOrder>3</processOrder>
    <recallActions>
        <action>
            <name>Update_Ran_Approvals_False</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Ready_for_Approval_Recall_Rejec</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>false</showApprovalHistory>
</ApprovalProcess>
